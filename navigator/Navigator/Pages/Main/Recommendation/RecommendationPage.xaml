<?xml version="1.0" encoding="utf-8" ?>
<!-- ReSharper disable MarkupAttributeTypo -->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:r="clr-namespace:Navigator.Renderers;assembly=Navigator"
             x:Class="Navigator.Pages.Main.Recommendation.RecommendationPage">

    <Grid
        Padding="10">
        <ScrollView>
            <ListView
                x:Name="ListView"
                ItemsSource="{Binding Items}"
                RowHeight="70">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Frame
                                    Margin="5,0"
                                    HeightRequest="60"
                                    CornerRadius="20"
                                    Padding="0"
                                    BackgroundColor="{StaticResource Accent1}"
                                    VerticalOptions="Center">
                                    <StackLayout
                                        Orientation="Horizontal"
                                        Spacing="0">
                                        <r:FilledImage
                                            HeightRequest="40"
                                            WidthRequest="40"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start"
                                            Margin="10"
                                            Source="v_book"
                                            Foreground="{StaticResource PrimaryDark}"/>
                                        <StackLayout
                                            Padding="0"
                                            Spacing="0"
                                            VerticalOptions="Center">
                                            <StackLayout Orientation="Horizontal">
                                                <Label
                                                    Text="{Binding Title}"
                                                    FontSize="Medium"
                                                    LineBreakMode="TailTruncation"
                                                    TextColor="{StaticResource PrimaryDark}"
                                                    Margin="0,0,15,0"/>
                                            </StackLayout>
                                            <StackLayout Orientation="Horizontal">
                                                <Label
                                                    Text="{Binding Author}"
                                                    FontSize="Medium"
                                                    LineBreakMode="TailTruncation"
                                                    TextColor="{StaticResource PrimaryDark}"
                                                    Margin="0,0,15,0"/>
                                            </StackLayout>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
    </Grid>

</ContentPage>